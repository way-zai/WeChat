<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wayzai.wechat.EditMy"
    android:orientation="vertical"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发表"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:textColor="#00ff00"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/edit_letter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="#ffffff"
        android:hint="这一刻的想法...

        "/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:src="@drawable/scenery"/>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/scenery2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
            android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/img_location"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_location"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_location"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="8dp"
            android:text="所在位置"
            android:textSize="20sp"/>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/img_man"
                android:layout_width="20dp"
                android:layout_height="23dp"
                android:src="@drawable/icon_wode"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_man"
                android:layout_marginLeft="25dp"
                android:text="谁可以看"
                android:textSize="20sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/img_at"
                android:layout_width="23dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_at"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_at"
                android:layout_marginLeft="23dp"
                android:text="提醒谁看"
                android:textSize="20sp"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
